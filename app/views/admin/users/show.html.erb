<div class="container text-center">
<h1>プロフィール</h1>

  <table class="table">
    <tr>
      <th>氏名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>所属</th>
      <td><%= @user.team %></td>
    </tr
    <tr>
      <th>電話番号</th>
      <td><%= @user.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </table>

  <%= link_to admin_user_path(@user.id), method: :delete, "data-confirm" => "退会させます。よろしいですか?" do %>
    <button type="button" class="btn btn-outline-dark">
      退会処理
    </button>
  <% end %>

</div>
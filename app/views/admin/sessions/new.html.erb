<div class="admin_log_in text-center">

<br>
<br>
<h2>管理者ログインフォーム</h2>

<%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <br>
  <br>

  <div class="actions">
    <%= f.submit "管理者ログイン", class: 'btn btn-success' %>
  </div>
<% end %>


</div>

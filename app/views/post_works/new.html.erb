<h1>作業の新規投稿フォーム</h1>

<% if @post_work.errors.any? %>
  <%= @post_work.errors.count %> error prohibited this obj from being saves:
  <ul>
    <% @post_work.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [@project, @post_work] do |f| %>
  <h4>作業名</h4>
  <%= f.text_field :name %>

  <h4>作業内容</h4>
  <%= f.text_area :work %>

  <h4>作業場所</h4>
  <%= f.text_field :area %>

  <h4>作業開始日時</h4>
  <%= f.datetime_field :start_time %>

  <h4>作業終了日時</h4>
  <%= f.datetime_field :end_time %><br>

  <br><%= f.submit "投稿する" %>

<% end %>

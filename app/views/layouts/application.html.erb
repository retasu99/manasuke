<!DOCTYPE html>
<html>
  <head>
    <title>Manasuke</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header row bg-dark py-3">
    
      <% if user_signed_in? %>
        <li>
          <%= link_to "プロジェクト一覧", projects_path %>
        </li>
        <li>
          <%= link_to "ユーザー一覧", users_path %>
        </li>
        <li>
          <%= link_to "マイページ", user_path(current_user.id) %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>

        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([['PostWork'], ['User']]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
          <%= f.submit "検索" %>
        <% end %>

      <% else %>

      <div class="col-5 offset-3">

        <%= link_to new_user_registration_path, class: 'text-light text-decoration-none' do %>
          <span class="px-2"><i class="fa-solid fa-house"></i> 新規登録 </span>
        <% end %>

        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>

        <li>
          <%= link_to "管理者としてログイン", new_admin_session_path %>
        </li>

      </div>
      <% end %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
    
  </body>
</html>

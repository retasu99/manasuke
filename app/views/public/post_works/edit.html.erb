<div class="container text-center">

<h1>作業内容 編集フォーム</h1>

  <% if @post_work.errors.any? %>
    <%= @post_work.errors.count %> 件のエラーが発生しました。
    <ul>
      <% @post_work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: [@project, @post_work] do |f| %>

    <h4>作業名</h4>
    <%= f.text_field :name, autofocus: true %>  

    <h4>作業内容</h4>
    <%= f.text_area :work, cols: "30", rows: "5" %>

    <h4>作業場所</h4>
    <%= f.text_field :area %>

    <h4>作業開始日時</h4>
    <%= f.datetime_field :start_time %>

    <h4>作業終了日時</h4>
    <%= f.datetime_field :end_time %><br>

    <br><%= f.submit "変更を保存" %>
  <% end %>

</div>

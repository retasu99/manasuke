<div class="sign_up text-center">

<h2>新規登録フォーム</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :所属 %><br>
    <%= f.text_field :team, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :氏名 %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "新規ユーザー登録", class: 'btn btn-info' %>
  </div>
<% end %>


</div>

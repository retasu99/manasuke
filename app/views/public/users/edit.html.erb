<div class="container text-center">

<h1>プロフィール編集</h1>

  <% if @user.errors.any? %>
    <p class="text-danger">
      <%= @user.errors.count %> 件の入力エラーがあります
    </p>
  <% end %>

  <%= form_with model: @user do |f| %>

    <p>氏名<br>
    <%= f.text_field :name %></p>

    <p>所属<br>
    <%= f.text_field :team %></p>

    <p>電話番号<br>
    <%= f.text_field :telephone_number %></p>

    <p>メールアドレス<br>
    <%= f.text_field :email %></p>

    <%= f.submit "変更を保存" %>
    
  <% end %>

</div>